<%- include('includes/head.ejs'), {
    username: username,
    permisos: permisos
} %>
    <div class="primary callout" id="login">
        <h1><% if (registro){ %>Registrate<% }else{ %>Bienvenido!<% } %></h1>

        <form action="/users/<% if (registro){ %>signup<% }else{ %>login<% } %>" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <% if (registro){ %>
                <label for="Nombre">Nombre Completo: 
                    <input id="Nombre" name="Nombre" type="text" autocomplete=off required>
                </label>
                <label for="Username">Nombre de usuario: 
                    <input id="Username" name="Username" type="text" autocomplete=off required>
                </label>
                <label for="Contrasena">Contraseña: 
                    <input id="Contrasena" name="Contrasena" type="password" required>
                </label>
            <% }else{ %>
                <label for="Username">Nombre de usuario: 
                    <input id="Username" name="Username" type="text" value="<%past.username%>" autocomplete=off required>
                </label>
                <label for="Contrasena">Contraseña: 
                    <input id="Contrasena" name="Contrasena" type="password" required>
                </label>
            <% } %>
            <div class="g-recaptcha" data-sitekey="6Lf1HbYpAAAAAGKcnpi6YbkF0A9o3bQiVtiWXMHm"></div>
            <br>
            <% if (past.state != ""){ %>
                <div class="callout alert" id="no_concuerda">
                    <%=past.state%>
                </div>
            <% } %>
            <button type="submit" class="success button" id="submit" value="Arma">Confirmar</button>
        </form>
    </div>

    <script src="https://www.google.com/recaptcha/api.js"></script>


<%- include('includes/footer.ejs') %>